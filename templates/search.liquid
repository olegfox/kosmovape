<div class="row">
  <div class="large-12 columns">
    <h1 class="page-title">Поиск</h1>
  </div>
</div>
<div class="row">
  <div class="columns">
    <div class="divider"></div>
  </div>
</div>
<div class="row summary narrow">
  {% if search.performed? %}
  <div class="large-4 columns">
    <p>Ищем: <strong>"{{search.query | escape}}"</strong></p>
  </div>    
  {% endif %}
  <div class="large-4 columns">
    <div class="searchbar-container">
      <form action="/search" method="get" role="search">
        <input name="q" type="text" placeholder="Поиск по каталогу" class="hint text" value="{{search.query | escape}}" />
        <button aria-hidden="false" class="glyph search"></button>
      </form>
    </div>
  </div>
  {% if search.performed? %}
  <div class="large-4 columns">
    <p><strong>{{ search.results.size }}</strong> найдено</p>
  </div>
  {% endif %}
</div>
<div class="row">
  <div class="columns">
    <div class="divider results"><br><br></div>
  </div>
</div>
{% if search.results != empty %}
<section class="row">
	<div class="product-grid clearfix">
		{% for product in search.results %}
			{% include 'snippet-product-item' %}
        {% endfor %}
	</div>
</section>
{% endif %}